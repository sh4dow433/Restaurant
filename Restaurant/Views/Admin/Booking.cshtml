@model IEnumerable<Restaurant.Models.Booking>
@section Scripts
{
    <script src="@Url.Content("~/js/skip-header.js")"></script>
}
<h3 class="mt-5 text-secondary text-center mb-5">Bookings</h3>
<div class="container mx-auto mb-0 pb-5 text-center">
    <div class="row mb-5">
        <div class="col-xs-3 col-lg-3"></div>
        <div class="col-xs-3 col-lg-3">
            <a class="btn btn-primary" asp-action="Booking" asp-route-active="false">View All Bookings</a>
        </div>
        <div class="col-xs-3 col-lg-3">
            <a class="btn btn-primary" asp-action="Booking" asp-route-active="true">View Only Active Bookings</a>
        </div>
        <div class="col-xs-3 col-lg-3"></div>
        <hr />
    </div>
    @if (Model.Count() > 0)
    {
        @foreach (var obj in Model)
        {
            string hour;
            switch (obj.Hour)
            {
                case Hour.h18:
                    hour = "18:00";
                    break;
                case Hour.h19_30:
                    hour = "19:30";
                    break;
                case Hour.h21:
                    hour = "21:00";
                    break;
                case Hour.h22_30:
                    hour = "22:30";
                    break;
                case Hour.h24:
                    hour = "24:00";
                    break;
                default:
                    hour = "18:00";
                    break;
            }

            <div class="row text-secondary font-weight-bold">
                <div class="col-xs-3 col-lg-3"></div>

                <div class="col-xs-3 col-lg-3">
                    Reservation's ID:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @obj.Id
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>
            <div class="row text-secondary font-weight-bold">
                <div class="col-xs-3 col-lg-3"></div>

                <div class="col-xs-3 col-lg-3">
                    Table's Number:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @obj.Table.TablesNumber
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>
            <div class="row text-secondary font-weight-bold">
                <div class="col-xs-3 col-lg-3"></div>
                <div class="col-xs-3 col-lg-3">
                    Active:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @obj.Active
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>

            <div class="row text-secondary font-weight-bold">
                <div class="col-xs-3 col-lg-3"></div>
                <div class="col-xs-3 col-lg-3">
                    Last Name:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @obj.LastName
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>
            <div class="row text-secondary">
                <div class="col-xs-3 col-lg-3"></div>
                <div class="col-xs-3 col-lg-3">
                    First Name:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @obj.FirstName
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>
            <div class="row text-secondary ">
                <div class="col-xs-3 col-lg-3"></div>
                <div class="col-xs-3 col-lg-3">
                    Reservation's Date:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @obj.DateTime.ToString("yyyy-MM-dd")
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>
            <div class="row text-secondary ">
                <div class="col-xs-3 col-lg-3"></div>
                <div class="col-xs-3 col-lg-3">
                    Reservation's Hour:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @hour
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>
            <div class="row text-secondary">
                <div class="col-xs-3 col-lg-3"></div>
                <div class="col-xs-3 col-lg-3">
                    Number of persons:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @obj.NumberOfGuests
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>
            <div class="row text-secondary">
                <div class="col-xs-3 col-lg-3"></div>
                <div class="col-xs-3 col-lg-3">
                    Phone Number:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @obj.PhoneNumber
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>
            <div class="row text-secondary">
                <div class="col-xs-3 col-lg-3"></div>
                <div class="col-xs-3 col-lg-3">
                    Email:
                </div>
                <div class="col-xs-3 col-lg-3">
                    @obj.Email
                </div>
                <div class="col-xs-3 col-lg-3"></div>
            </div>
            <div class="row mt-3">
                <div class="col-xs-4 col-lg-4"></div>
                <div class="col-xs-4 col-lg-4">
                    <a class="btn btn-block btn-danger" asp-action="DeleteBooking" asp-route-id="@obj.Id">Delete</a>
                </div>
                <div class="col-xs-4 col-lg-4"></div>
            </div>
            <hr />
        }
    }
    else
    {
        <div class="text-center text-secondary">
            No bookings found.
        </div>
    }
</div>