@model IEnumerable<Restaurant.Models.Table>
@section Scripts
{
    <script src="@Url.Content("~/js/skip-header.js")"></script>
}

<div class="container mx-auto pb-5">
    <h3 class="text-secondary"> Tables</h3>
    <a class="btn btn-primary btn-block mt-4 mb-4" asp-controller="Admin" asp-action="CreateTable">Create Table</a>

    @if (Model.Count() > 0)
    {
        @foreach (var obj in Model)
        {
            <div class="row text-secondary">
                <div class="col-xs-3 col-lg-3">
                    <b>Table's Number: </b> @obj.TablesNumber
                </div>
                <div class="col-xs-3 col-lg-3">
                    <b>Table's number of chairs: </b> @obj.NumberOfChairs
                </div>
                <div class="col-xs-5 col-lg-5">
                    <b>Table's number of active bookings: </b> @obj.Bookings.Where(b => b.Active == true).Count()
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-xs-9 col-lg-9 offset-3">
                </div>
                <div class="col-xs-3 col-lg-3">
                    <a class="btn btn-outline btn-danger" asp-action="DeleteTable" asp-route-id="@obj.Id">Delete</a>
                </div>
            </div>
            <hr />
        }
    }
    else
    {
        <div class="text-center text-secondary p-5"> No table was found. </div>
    }

</div>